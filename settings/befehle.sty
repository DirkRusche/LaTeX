% Abbildung

\newcommand{\figcite}[1]{\parencite{#1}}
\newcommand{\anlehnung}[1]{In Anlehnung an: \figcite{#1}}
\newcommand{\entnommen}[1]{Entnommen aus: \figcite{#1}}

\newcommand{\centfigure}[4][]{
	\begin{figure}[H]
		\begin{center}
			#2
		\end{center}
		#3
		
		\ifthenelse{\equal{#1}{}}{}{
			\begin{center}
				\vspace{-8pt}\scriptsize{#1}
			\end{center}
		}
		
		#4
	\end{figure}
}


\newcommand{\centtable}[4][]{
	\begin{table}[H]
		\begin{center}
			#2
		\end{center}
		#3
		
		\ifthenelse{\equal{#1}{}}{}{
			\begin{center}
				\vspace{-8pt}\scriptsize{#1}
			\end{center}
		}
		
		#4
	\end{table}
}


